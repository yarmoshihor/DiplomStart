<h1>Добавити новий курс</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Назва курсу</label>
        <span class="helper-text" data-error="Введіть назву"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min ="1">
        <label for="price">Ціна курсу</label>
        <span class="helper-text" data-error="Введіть ціну"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введіть url картинки"></span>
    </div>

    <button class="btn btn-primary">Добавити курс</button>
</form>